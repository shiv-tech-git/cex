function cex_git_pull
{
    local git_dir="$1"

    echo "cd $git_dir"
    cd $git_dir
    echo "git pull"
    git pull
}

function cex_git_submodule_update
{
    local git_dir="$1"

    echo "cd $git_dir"
    cd $git_dir
    echo "git submodule update"
    git submodule update
}

function cex_git_head_hash
{
    local git_dir="$1"

    echo $(cd $git_dir && git rev-parse --short HEAD)
}
